{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ES2023"],
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "paths": {
      "statelift": ["../lib/src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
